agent "test-with-pii" {
  intent "test detectare PII"
  constraints { pii_leak == false }
  capabilities {
    fs("./out")
  }
  checks {
    policy "no-pii" expect scan.artifacts.no_personal_data()
  }
  emit {
    service type="web-app" target="./out/pii-test"
    manifest target="./out/pii.manifest.json"
  }
}
