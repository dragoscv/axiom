{
  "name": "@codai/axiom-mcp",
  "version": "1.0.7",
  "type": "module",
  "bin": {
    "axiom-mcp": "dist/server.js",
    "axiom-mcp-stdio": "dist/mcp-stdio.js"
  },
  "main": "dist/mcp-stdio.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/mcp-stdio.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/server.ts",
    "dev:stdio": "tsx watch src/mcp-stdio.ts",
    "postinstall": "node dist/postinstall.js"
  },
  "dependencies": {
    "@codai/axiom-core": "workspace:*",
    "@codai/axiom-emitter-apiservice": "workspace:*",
    "@codai/axiom-emitter-batchjob": "workspace:*",
    "@codai/axiom-emitter-docker": "workspace:*",
    "@codai/axiom-emitter-webapp": "workspace:*",
    "@codai/axiom-engine": "workspace:*",
    "@codai/axiom-policies": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.20.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}